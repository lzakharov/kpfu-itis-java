<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>ru.kpfu.itis.lzakharov.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>profile</servlet-name>
        <servlet-class>ru.kpfu.itis.lzakharov.servlets.ProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>ru.kpfu.itis.lzakharov.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>ru.kpfu.itis.lzakharov.servlets.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>feed</servlet-name>
        <servlet-class>ru.kpfu.itis.lzakharov.servlets.FeedServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>feed</servlet-name>
        <url-pattern>/feed</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>showBook</servlet-name>
        <servlet-class>ru.kpfu.itis.lzakharov.servlets.ShowBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>showBook</servlet-name>
        <url-pattern>/book/show</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>showArticle</servlet-name>
        <servlet-class>ru.kpfu.itis.lzakharov.servlets.ShowArticleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>showArticle</servlet-name>
        <url-pattern>/article/show</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-name>LogoutServlet</servlet-name>
    </filter-mapping>

</web-app>